<%- include("partials/header.ejs") %>

          <h1 class="content-title"> <%= typeof mainTitle !== "undefined" && mainTitle ? mainTitle : "Les actualités du blog" %></h1>
          <div class="pure-g">
          <% for (const article of articles) { %>
            <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
              <header>
                <img class="card-img pure-img" src="/images/<%= article.img %>" alt="<%= article.img_alt %>">
                <h2><%= article.title %></h2>
                <div class="card-meta">
                  Par <a href="/articles/byauthor/<%= article.author %>"><%= article.author %></a> 
                  dans la catégorie <a href="/articles/bycategory/<%= article.category %>"><%= article.category %></a>
                </div>
              </header>
              <p>
                <%= article.text.slice(0, 150) %>...
              </p>
              <a class="card-action pure-button" href="/articles/<%= article.id %>">Lire l'article</a>
            </article>
            <% } %>
          </div>

<%- include("partials/footer.ejs") %>
